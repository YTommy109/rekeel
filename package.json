{
  "name": "rekeel",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.28",
    "@fortawesome/free-solid-svg-icons": "^5.13.0",
    "@fortawesome/react-fontawesome": "^0.1.10",
    "dayjs": "^1.9.6",
    "hashids": "^2.2.1",
    "leaflet": "^1.6.0",
    "license-checker": "^25.0.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-leaflet": "^3.0.2",
    "react-nvd3": "^0.5.7",
    "react-router-dom": "^5.1.2",
    "react-scripts": "^4.0.0",
    "react-transition-group": "^4.3.0",
    "recharts": "^1.8.5",
    "recoil": "^0.1.2",
    "styled-components": "^5.0.0"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test",
    "eject": "react-scripts eject",
    "lint": "eslint src",
    "lint:fix": "yarn lint --fix",
    "production": "serve -s build",
    "stable": "yarn install; yarn build; yarn production",
    "cafe": "testcafe",
    "cafe:report": "testcafe chrome:headless -r spec:report/cafe.txt",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public",
    "coverage": "yarn test --coverage --watchAll=false",
    "plato": "npx jsplato -r -n -e .eslintrc -t 'Static Analysis Report' -x '\\.(test|spec)\\.' -d report/plato src/**/**.js",
    "doc": "esdoc",
    "license": "license-checker --production --excludePrivatePackages --csv --out report/license.csv"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@storybook/addon-actions": "^6.0.28",
    "@storybook/addon-info": "^5.3.17",
    "@storybook/addon-knobs": "^6.0.28",
    "@storybook/addon-links": "^6.0.28",
    "@storybook/addon-viewport": "^6.0.28",
    "@storybook/addons": "^6.0.28",
    "@storybook/cli": "^6.0.28",
    "@storybook/react": "^6.0.28",
    "@testing-library/jest-dom": "^5.3.0",
    "@testing-library/react": "^11.1.2",
    "@testing-library/user-event": "^12.0.7",
    "babel-plugin-react-remove-properties": "^0.3.0",
    "babel-plugin-styled-components": "^1.10.7",
    "esdoc": "^1.1.0",
    "esdoc-ecmascript-proposal-plugin": "^1.0.0",
    "esdoc-jsx-plugin": "^1.0.0",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "^7.13.0",
    "eslint-plugin-testcafe": "^0.2.1",
    "husky": "^4.3.0",
    "jest-fetch-mock": "^3.0.3",
    "jest-html-reporter": "^3.1.0",
    "json-server": "^0.16.1",
    "jsplato": "^0.0.3",
    "node-localstorage": "^2.1.6",
    "react-app-rewired": "^2.1.5",
    "recoil-logger": "^1.0.1",
    "serve": "^11.3.0",
    "testcafe": "^1.8.2",
    "testcafe-react-selectors": "^4.0.0",
    "value-schema": "^3.0.0",
    "yarnhook": "^0.5.1"
  },
  "jest": {
    "verbose": true,
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.js"
    ],
    "coverageDirectory": "report/coverage",
    "coveragePathIgnorePatterns": [
      ".(stories|spec).*"
    ],
    "reporters": [
      "default",
      [
        "./node_modules/jest-html-reporter",
        {
          "pageTitle": "Unit Test Report",
          "outputPath": "report/jest.html"
        }
      ]
    ]
  },
  "husky": {
    "hooks": {
      "post-checkout": "yarnhook",
      "post-merge": "yarnhook",
      "post-rewrite": "yarnhook"
    }
  }
}
